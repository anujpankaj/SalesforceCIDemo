<aura:component implements="lightning:isUrlAddressable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId">
    <aura:attribute name="releaseName" type="String" default="Spring 18"/>
    <aura:attribute name="recordId" type="Id"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler name="change" value="{!v.pageReference}" action="{!c.handlePageChange}"/>
    <lightning:card iconName="custom:custom96" 
                    title="{!'Welcome to ' + v.releaseName +'. Your Opportunity Id is -'+ v.recordId}"/>
</aura:component>