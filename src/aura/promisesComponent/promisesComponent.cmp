<aura:component implements="flexipage:availableForRecordHome" controller="ServerSideController">
    <aura:attribute name="message" type="String" default="a" description="The string we're appending to"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <div>
    	Message value: <ui:outputText value="{!v.message}" />
    </div>
    <div>
    	<lightning:button label="Run Parallel" onclick="{!c.handleParallerPromise}" 
                         variant="brand" class="slds-m-top_medium"/>
    </div>
</aura:component>