<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:attribute name="displayMsg" type="String"/>
	<div class="demo-only" style="height: 4rem;">
      <div class="slds-notify_container slds-is-relative">
        <div class="slds-notify slds-notify_toast slds-theme_info" role="alert">
          <span class="slds-assistive-text">info</span>
          <span class="slds-icon_container slds-icon-utility-info slds-m-right_small slds-no-flex slds-align-top" title="Description of icon when needed">
             <c:svgIcon svgPath="/_slds/icons/utility-sprite/svg/symbols.svg#info" 
                         class="slds-icon slds-icon_small"/>
          </span>
          <div class="slds-notify__content">
            <h2 class="slds-text-heading_small">
                {!v.displayMsg}
            </h2>
          </div>
          <button class="slds-button slds-button_icon slds-notify__close slds-button_icon-inverse" title="Close">
              <c:svgIcon svgPath="/_slds/icons/utility-sprite/svg/symbols.svg#close" 
                         class="slds-button__icon slds-button__icon_large"/>
               <span class="slds-assistive-text">Close</span>
          </button>
        </div>
    </div>
</div>
</aura:component>